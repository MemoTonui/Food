<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/food_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/food2" />

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/food_image"

                    android:fontFamily="@font/poppins"
                    android:text="Food Number 1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/food_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/food_image"
                    android:fontFamily="@font/poppins"
                    android:text="Ksh 2000"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/food_price"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="80dp"
                    android:layout_toRightOf="@id/food_image"
                    android:src="@drawable/ic_baseline_control_point_24" />

                <TextView
                    android:id="@+id/food_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/food_price"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="80dp"
                    android:layout_toRightOf="@id/plus"
                    android:padding="2dp"
                    android:fontFamily="@font/poppins"
                    android:text="1"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/food_price"
                    android:layout_marginTop="80dp"
                    android:layout_toRightOf="@id/food_quantity"
                    android:src="@drawable/ic_baseline_remove_circle_outline_24" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>